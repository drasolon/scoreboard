doctype html
html(lang="en")
  head
    // Global site tag (gtag.js) - Google Analytics
    script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-121560815-1')
    script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-121560815-1');
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='A free online scoreboard app to keep scores of your games forever. Give a name to your games and rounds and share them with your friends.')
    title Save My Score : a free online scoreboard app
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700")
    link(rel='stylesheet', href='/css/style.css')
    if (amountOfPages > 1)
      link(rel='stylesheet', href='/css/pagination.css')
    link(rel='stylesheet', href='/css/game.css')
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous")
  body
    nav.navbar(role='navigation').navbar-expand-lg.navbar-dark
      .container.col-lg-4
          a.navbar-brand(href='/') <strong>SaveMyScore</strong>
          button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarToggler', aria-controls='navbarToggler', aria-expanded='false', aria-label='Toggle navigation')
              span.navbar-toggler-icon
          .collapse.navbar-collapse#navbarToggler                
              ul.navbar-nav.ml-auto
                  li.nav-item
                      a.nav-link(href='/new') New Game
                  li.nav-item
                      a.nav-link(href='/about') About
    .container.col-lg-4.mt-4.pt-2.pb-2                
      block content
        if ((games) && (games.length > 0))
          .game-list-wrapper           
            .row
              .col
                .h4 Your games
                  small
                    | 
                    a(href='/?clear=true') (clear the list)
            if (amountOfPages > 1)
              include ./pagination.pug
            each game in games
              .row.mt-2
                .col
                  a.no-decoration(href= game.url)
                    .card.index-card.border-0
                      .card-body
                        h5.d-inline #{game.name}
                        .d-inline.float-right #{game.dateDiff}
        .row.mt-5
          .col  
            .jumbotron.jumbotron-custom
                h1.display-4 Save my Score
                p.lead This is a simple free app to save the scores of your games.
                hr.my-4
                p You can save the scores of up to 25 players per games and share them with your friends.
                a.btn.btn-custom.btn-lg.mt-3(href='/new', role='button') Let's go
  block scripts                
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous")
